@model ProductViewModel

<div class="row">
	<div class="col-md-9">
		<h1>@Model.Title</h1>
		<p>@Model.Description</p>
		<p>Cena: @Model.Price.ToString("C2")</p>
		
		<a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-identifier="@Model.Identifier" class="btn btn-success">Přidat do košíku</a>
		@if (Model.InBasket > 0)
		{
			<a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-identifier="@Model.Identifier" class="btn btn-warning">Odebrat z košíku (@Model.InBasket)</a>
		}
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function () {
		$.get("/products/visit/@Model.ProductId", function () {
		});
	});
</script>